<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="6dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="16dp"
            app:srcCompat="@drawable/ic_face_black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name"
                />

            <lynx.ancha.starwars.ui.widgets.TemplateTextView
                android:id="@+id/card_gender_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:template="@string/item_card_people_gender"
                />

            <lynx.ancha.starwars.ui.widgets.TemplateTextView
                android:id="@+id/card_birth_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:template="@string/item_card_people_birth"
                />

            <lynx.ancha.starwars.ui.widgets.TemplateTextView
                android:id="@+id/card_height_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:template="@string/item_card_people_height"
                />

            <lynx.ancha.starwars.ui.widgets.TemplateTextView
                android:id="@+id/card_mass_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:template="@string/item_card_people_mass"
                />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

